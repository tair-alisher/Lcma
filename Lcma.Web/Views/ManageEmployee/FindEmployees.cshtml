@model IEnumerable<Lcma.Web.Models.EmployeeVM>

<div id="items" class="row">
    @if (Model.Count() <= 0)
    {
        <p><b>Нет результатов</b></p>
    }
    else
    {
        <h4>Результаты поиска</h4>
        <table class="table" id="found-items-list">
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr id="@employee.Id">
                        <td class="name">@Html.DisplayFor(model => employee.FullName) <button type="button" class="btn btn-link" onclick="attachEmployee('@employee.Id')">Добавить</button></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>